#!/usr/bin/env node

const co = require('co');
const tamagoya = require('../lib/tamagoya');

co(function *() {
  const menus = yield tamagoya();
  menus.forEach(menu => {
    console.log('Date   : ' + menu.date.toString());
    console.log('Calorie: ' + menu.calorie);
    console.log('Menus  : ');

    menu.menus.forEach(function (m) {
      console.log(' - ' + m);
    });

    console.log('');
  });
});
